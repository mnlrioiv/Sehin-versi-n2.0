<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Sehin Módulo Web", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Clientes <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Nuevo Cliente", "Create", "Clientes")</li>
                            <li>@Html.ActionLink("Nuevo Establecimiento", "Create", "Establecimientos")</li>
                            <li>@Html.ActionLink("Listado de clientes", "Index", "Clientes")</li>
                            <li>@Html.ActionLink("Condiciones de IVA", "Index", "CondicionIvas")</li>
                            <li>@Html.ActionLink("Contactos de clientes", "Index", "Contactoes")</li>
                            <li>@Html.ActionLink("Provincias", "Index", "Provincias")</li>
                            <li>@Html.ActionLink("Localidades", "Create", "Localidades")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("Presupuestos", "NuevoPresupuesto", "PresupuestoViewModel")</li>
                            <li>@Html.ActionLink("Planilla de Presupuestos", "Index", "Presupuestoes")</li>
                            <li role="separator" class="divider"></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Servicios <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Nuevo Servicio", "Create", "Servicios")</li>
                            <li>@Html.ActionLink("Listado de Servicios Ofrecidos", "Index", "Servicios")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("Nuevo Técnico", "Index", "Técnicos")</li>
                            <li role="separator" class="divider"></li>
                        </ul>
                    </li>

                    <li>@Html.ActionLink("Contacto", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
